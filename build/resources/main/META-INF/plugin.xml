<idea-plugin>
  <version>1.0-SNAPSHOT</version>
  <idea-version since-build="211.7442" until-build="211.*" />
  <id>org.seiphon.ExtractDataTool</id>
  <name>Extract Data Tool</name>
  <vendor email="seiphon.wang@gmail.com" url="http://www.seiphon.com">Seiphon</vendor>
  <description><![CDATA[An App can help to extract expected data from files.<br>
	<em>most HTML tags be used</em>]]></description>
  <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
		 on how to target different products -->
  <depends>com.intellij.modules.platform</depends>
  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <toolWindow anchor="right" factoryClass="com.seiphon.extract.view.windows.NoteListWindowFactory" id="notewindow" />
  </extensions>
  <actions>
    <!-- Add your actions here -->
    <action class="com.seiphon.extract.actions.AddNotesAction" description="add a note" id="AddNotesAction" text="Add notes">
      <add-to-group anchor="first" group-id="EditorPopupMenu" />
    </action>
  </actions>
</idea-plugin>
